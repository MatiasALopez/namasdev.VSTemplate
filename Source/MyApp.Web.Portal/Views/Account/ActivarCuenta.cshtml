@model MyApp.Web.Portal.ViewModels.ActivarCuentaViewModel
@{
    ViewBag.Title = "Activar cuenta";
}
<section id="loginForm">
    @using (Html.BeginForm("ActivarCuenta", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(excludePropertyErrors: false)
        @Html.HiddenFor(m => m.Code)
        <p class="mx-n3 font-weight-bold text-center">Para activar tu cuenta debes crear tu contraseña</p>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
        <input type="submit" class="btn btn-primary" value="Activar" />
    }
</section>
